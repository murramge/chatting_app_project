extends base.pug

block content
    if errorMessage
        span=errorMessage
    div.welcome-header
        h1.welcome-header__title Welcome to Chatting App 
        p.welcome-header__text If you have a Chatting Account, log in with your email
    form(method="POST")#login-form
        input(placeholder="Email", name="email", type="text", required)
        input(placeholder="password",name="password", type="password", required) 
        input(type="submit", value="Login")
    
        a(href="/join") JOIN
