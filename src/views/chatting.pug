doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width,initial-scale=1.0")
        title talk 
        link(rel="stylesheet", href="/static/css/styles.css")
        link(href="https://fonts.googleapis.com/css2?family=Lilita+One&family=Hubballi&family=Itim&family=Poor Story&family=IBM Plex Sans KR&display=swap" rel="stylesheet")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css")
        script(type="text/javascript" src="https://hamstertalk.herokuapp.com/static/js/jquery.min.js")
        script(src="/socket.io/socket.io.js")
        script(src="/static/js/chatting.js")
        
    body.background
        div.alt-header
            div.alt-header_column
                a(href="/chat"+"/"+loggedInUser._id+"/chattingroom") 
                    span
                        i.fas.fa-chevron-left
            h1.alt-header_column 
                if(username != chatuser)
                    span 🐹 #{chatuser}🍒
                else
                    span 🐹 #{friendname}🍒


    form(method="POST")#formgroup
            div.chatting
                div#content
            input(placeholder="ChatId",name="Chat Id", type="text", id="chat_id", class="form-control" value=chat_id, required)
            input(placeholder="chattingroom_id", name="chattingroom_id", type="text", id="chattingroom_id", class="form-control", value=chattingroom_id, required)
            div#formgroup
                input(placeholder="",name="Message", type="text", id="message",  required)
                input(type="submit", value="전송", id="button")