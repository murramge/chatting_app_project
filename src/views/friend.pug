extends base.pug
block body
    body#friend-background
    block content
        div.screen-header 
            h1.screen-header__title Friends
            div.screen-header__icons
                span
                    a(href="/friend/search").fa-solid.fa-user-plus.fa-xl 
        
        main.friends-screen 
            div.user-component  
                    div.user-component__column
                        if(loggedInUser.avatarUrl)
                            img(src=loggedInUser.avatarUrl).user-component__avatar.user-component__avatar--sm 
                        div.user-component__text
                            h4.user-component__title.user-component__title--not-bold #{loggedInUser.name} 
                                span.user-component__status #{loggedInUser.userstatus}
                    div.user-component__column 
                        div.user-edit-profile
                            a(href="/friend"+"/"+loggedInUser._id+"/edit") Edit Profile
                    
            
            div.friends-screen__channel 
                div.friends-screen__channel-header
                    span Friend
                each val, index in friend
                    div.friend_info_link
                        a(href="/chat"+"/"+friend[index]._id).friend_info_link
                            div.user-component
                                div.user-component__column 
                                    if (friend)
                                        img(src=friend[index].avatarUrl).user-component__avatar.user-component__avatar--sm 
                                        div.user-component__text #{friend[index].name}
                                        span.user-component__status #{friend[index].userstatus}
                                div.user-component__column
        include partials/footer.pug
